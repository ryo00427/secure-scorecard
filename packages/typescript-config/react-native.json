{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Native / Expo Configuration",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  }
}
