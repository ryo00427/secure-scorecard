# =============================================================================
# Terraform変数設定ファイル（サンプル）
# =============================================================================
#
# このファイルをコピーして terraform.tfvars を作成してください：
#   cp terraform.tfvars.example terraform.tfvars
#
# terraform.tfvars はGitにコミットしないでください（機密情報を含む可能性があるため）

# -----------------------------------------------------------------------------
# 基本設定
# -----------------------------------------------------------------------------

project_name = "home-garden"
environment  = "dev"  # dev, staging, prod
aws_region   = "ap-northeast-1"

# -----------------------------------------------------------------------------
# VPC設定
# -----------------------------------------------------------------------------

vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["ap-northeast-1a", "ap-northeast-1c"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24"]

# -----------------------------------------------------------------------------
# RDS設定
# -----------------------------------------------------------------------------

db_instance_class        = "db.t3.micro"  # 開発用は db.t3.micro、本番は db.t3.small 以上
db_name                  = "home_garden"
db_username              = "postgres"
db_multi_az              = false  # 本番では true
db_backup_retention_days = 7

# -----------------------------------------------------------------------------
# ECS設定
# -----------------------------------------------------------------------------

ecs_task_cpu      = 256   # 0.25 vCPU
ecs_task_memory   = 512   # 512 MiB
ecs_desired_count = 1     # 希望タスク数
ecs_min_count     = 1     # 最小タスク数
ecs_max_count     = 4     # 最大タスク数

# -----------------------------------------------------------------------------
# S3/CloudFront設定
# -----------------------------------------------------------------------------

s3_force_destroy       = true  # 開発用は true、本番では false
cloudfront_price_class = "PriceClass_200"  # アジア、ヨーロッパ、北米

# -----------------------------------------------------------------------------
# 通知設定
# -----------------------------------------------------------------------------

# SESで検証するメールアドレス（オプション）
ses_email_identity = ""

# -----------------------------------------------------------------------------
# アプリケーション設定
# -----------------------------------------------------------------------------

# JWT署名用シークレット（32文字以上推奨）
jwt_secret = "your-jwt-secret-change-in-production-32chars"

# CORS許可オリジン
cors_allowed_origins = ["http://localhost:3000", "http://localhost:8081"]
