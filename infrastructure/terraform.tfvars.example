# =============================================================================
# Terraform Variables Example
# =============================================================================
# このファイルをコピーして terraform.tfvars を作成し、値を設定してください。
#
# cp terraform.tfvars.example terraform.tfvars
#
# 注意: terraform.tfvars は .gitignore に追加されています。
# 機密情報（パスワード等）をリポジトリにコミットしないでください。

# -----------------------------------------------------------------------------
# 基本設定
# -----------------------------------------------------------------------------

project_name = "home-garden"
environment  = "dev"  # dev, staging, prod
aws_region   = "ap-northeast-1"

# -----------------------------------------------------------------------------
# ネットワーク設定
# -----------------------------------------------------------------------------

vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["ap-northeast-1a", "ap-northeast-1c"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# -----------------------------------------------------------------------------
# RDS設定
# -----------------------------------------------------------------------------

db_instance_class = "db.t3.micro"  # 開発環境用
db_name           = "home_garden"
db_username       = "postgres"
db_multi_az       = false  # 開発環境は単一AZ

# -----------------------------------------------------------------------------
# ECS設定
# -----------------------------------------------------------------------------

ecs_task_cpu      = 256   # 0.25 vCPU
ecs_task_memory   = 512   # 512 MB
ecs_desired_count = 1
ecs_min_capacity  = 1
ecs_max_capacity  = 3

# -----------------------------------------------------------------------------
# アプリケーション設定
# -----------------------------------------------------------------------------

app_port          = 8080
health_check_path = "/health"

# -----------------------------------------------------------------------------
# ドメイン設定（オプション）
# -----------------------------------------------------------------------------
# カスタムドメインを使用する場合は設定してください。
# ACM証明書はあらかじめ作成しておく必要があります。

# domain_name     = "example.com"
# certificate_arn = "arn:aws:acm:ap-northeast-1:123456789012:certificate/xxxxx"
