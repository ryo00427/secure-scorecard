{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@secure-scorecard/typescript-config/react-native.json",
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "types": ["jest"],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "tailwind.config.js",
    "**/__tests__/**"
  ]
}
