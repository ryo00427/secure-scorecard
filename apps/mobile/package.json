    "typescript": "^5.7.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "prettier": "^3.4.2",
